                @Html.ValidationMessageFor(model => model.Borrow, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Transfer, htmlAttributes: new { @class = "control-label col-md-2" })
