@model IEnumerable<DLSM.Models.Product>
@{
    if (Session["UserID"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}

<table class="table">
    <tbody id="SearchProRow">
        <tr>
            <th>
                รหัส
            </th>
            <th>
                ชื่อวัสดุอุปกรณ์
            </th>
            <th>
                กลุ่มวัสดุอุปกรณ์
            </th>
            @*<th>
                จำนวนขั้นต่ำ
            </th>*@
            <th></th>
        </tr>

        @if(Model != null)
        {
            if(Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryName)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.MinStock)
                        </td>*@
                   
                        <td>
                            <a href="/Products/Edit?id=@item.ID"><i class="fa fa-fw fa-pencil-square fa-2x"></i></a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" style="text-align:center;">
                        ไม่พบข้อมูล
                    </td>
                </tr>
                <tr>
                    <td colspan="4" style="text-align:center;">
                        @Html.ActionLink("Back", "Index", "Products")
                    </td>
                </tr>
            }
        }
      
    </tbody>
</table>
